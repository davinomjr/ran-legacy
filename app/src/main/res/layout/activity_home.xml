<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.junior.davino.ran.activities.HomeActivity"
    android:background="@color/colorAccent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        ></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/btn_color"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/menu_color"
                        android:background="#01579B"
                        android:drawableBottom="@drawable/ic_palette_white_24dp"
                        style="@style/MainButtonTheme" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/btn_digit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/menu_digit"
                        android:background="#0277BD"
                        android:drawableBottom="@drawable/ic_looks_one_white_24dp"
                        style="@style/MainButtonTheme"/>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:id="@+id/btn_letter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/menu_letter"
                        android:background="#0288D1"
                        android:drawableBottom="@drawable/ic_text_format_white_24dp"
                        style="@style/MainButtonTheme"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/btn_object"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/menu_object"
                        android:background="#039BE5"
                        android:drawableBottom="@drawable/ic_flight_white_24dp"
                        style="@style/MainButtonTheme"/>
                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:id="@+id/btn_color_written"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/menu_color_written"
                        android:background="#03A9F4"
                        android:drawableBottom="@drawable/ic_invert_colors_white_24dp"
                        style="@style/MainButtonTheme"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">

                    <Button
                        android:id="@+id/btn_object_written"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/menu_object_written"
                        android:background="#29B6F6"
                        android:drawableBottom="@drawable/ic_directions_car_white_24dp"
                        style="@style/MainButtonTheme"/>
                </RelativeLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>
